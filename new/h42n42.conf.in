<ocsigen>
  <server>
    <port>8080</port>

    <logdir>/home/opam/app/local/var/log/h42n42</logdir>
    <datadir>/home/opam/app/local/var/data/h42n42</datadir>
    <uploaddir>/tmp</uploaddir>
    <commandpipe>/home/opam/app/local/var/run/h42n42-cmd</commandpipe>

    <charset>utf-8</charset>

    <!-- enable static files -->
    <extension findlib-package="ocsigenserver.ext.staticmod"/>

    <!-- Ocsipersist backend (required if your code links ocsipersist) -->
    <ocsipersist>
      <sqlite file="/home/opam/app/local/var/data/h42n42/ocsipersist.db"/>
    </ocsipersist>

    <host defaulthostname="localhost" hostfilter="*">
      <static dir="/home/opam/app/local/var/www/h42n42" />
      <eliom module="/home/opam/app/_build/default/h42n42.cma" />
    </host>
  </server>
</ocsigen>